<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/backgroud"
    >


    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Calculadora de Consumo de Energia e Custo"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editPotencia"
        android:layout_marginTop="210dp"
        android:ems="10"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_width="320dp"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:hint="Potência (Watts):" />

    <EditText
        android:id="@+id/editTempo"
        android:layout_marginTop="270dp"
        android:ems="10"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_width="320dp"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:hint="Tempo de uso (Horas):" />

    <EditText
        android:id="@+id/editCusto"
        android:layout_marginTop="330dp"
        android:ems="10"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_width="320dp"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:hint="Preço do kWh (Reais):" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:ems="12"
        android:textSize="20dp"
        android:text="Calcular"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/meu_botao"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="25dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/energy"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="25dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/money"
        />

    <TextView
        android:id="@+id/txtR1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="90dp"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Consumo:" />

    <TextView
        android:id="@+id/txtR2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="90dp"
        android:textSize="28sp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Custo:" />

    <View
        android:id="@+id/view1"
        android:layout_width="370dp"
        android:layout_marginTop="590dp"
        android:layout_marginLeft="10dp"
        android:layout_height="80dp"
        android:background="@drawable/imageview"
        />

    <View
        android:id="@+id/view2"
        android:layout_width="370dp"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="10dp"
        android:layout_height="80dp"
        android:background="@drawable/imageview"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="110dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/reusavel" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="270dp"
        app:srcCompat="@drawable/icontime" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_marginTop="210dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/plug" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_marginTop="330dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/price" />


</FrameLayout>
